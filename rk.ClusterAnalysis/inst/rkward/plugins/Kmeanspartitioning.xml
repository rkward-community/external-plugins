							          if(thisObject.classes().indexOf("dist") != -1){
							            prepareFrame = "false";
							          } else {}
							        } else {}
							      } else {}
							      gui.setValue("frm_Usnlysbs.enabled", selectFrame);
							      gui.setValue("frm_Dtprprtn.enabled", prepareFrame);
							    } 
